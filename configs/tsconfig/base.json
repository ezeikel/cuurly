{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "paths": {
    "@configs/*": ["../../configs/*"],
    "@packages/*": ["../../packages/*"]
  },
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "target": "ES2017",
    "moduleResolution": "bundler"
  },
  "exclude": ["node_modules"]
}
